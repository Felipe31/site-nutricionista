doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title SB Admin 2 - Login
  // Custom fonts for this template
  link(rel="shortcut icon", href="/assets/img/favicon2.ico")
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
  // Custom styles for this template
  link(href='/assets/css/sb-admin-2.min.css' rel='stylesheet')
  script(src='/assets/js/custom.js' async)
body.container
  // Outer Row
  div.row.justify-content-center
    div.col-xl-10.col-lg-12.col-md-9
      div.card.o-hidden.border-0.shadow-lg.my-5
        div.card-body.p-0
          // Nested Row within Card Body
          div.row
            div.col-lg-6.d-none.d-lg-block.bg-register-image
            div.col-lg-6
              div.p-5
                div.text-center
                  h1.h4.text-gray-900.mb-4 Cadastrar novo usuário
                form.user(method="POST" action="/criando-usuario" name='formAuth')
                  div.form-group
                    input#inputName.form-control.form-control-user(type='text' aria-describedby='Nome' name='inputName' placeholder='Nome Sobrenome')
                  div.form-group
                    input#inputEmail.form-control.form-control-user(type='email' name='inputEmail' placeholder='seu@email.com')
                  div.form-group
                    input#inputPassword.form-control.form-control-user(type='password' placeholder='Password' name='inputPassword')
                  div.form-group
                    div.custom-control.custom-checkbox.small
                      input#customCheck.custom-control-input(type='checkbox' name='checkboxAdm')
                      label.custom-control-label(for='customCheck') Administrador
                  br
                  a.btn.btn-primary.btn-user.btn-block(href="javascript: submit()") Criar usuário
                hr
                div.text-center
                  a.small(href='logout') Logout!
script(src='/assets/js/sb-admin-2.min.js')
