extends layout

block layout-content
  div.View.content
    div.container-fluid
      div.row
        div.card
          div.header
            h4.title Registrar Paciente
          div.content
            form
              div.row
                div.col-md-1
                  div.form-group
                    label(for='id') Código
                    p.form-control(id='id') 123
                div.col-md-6
                  div.form-group
                    label(for='email') Nome completo
                    input.form-control(type='text' placeholder='Maria da Silva' value='' id='fullName')
