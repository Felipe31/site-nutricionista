                  div.col-md-2
                    div.form-group
                      label Menor peso pelo IMC
                      input.form-control#imc(type='text' tabindex="-1" readonly)
                  div.col-md-2
                    div.form-group
                      label Maior peso pelo IMC
                      input.form-control#imc(type='text' tabindex="-1" readonly)
                  div.col-md-3
                    div.form-group
                      label Peso Meta
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                div.row
                  div.col-md-12
                    div.form-group
                      label Medicamentos
                      textarea.form-control(rows='5' placeholder='Assuntos tratados na consulta')
                div.row
                  div.col-md-3
                    div.form-group
                      label Técnica cirúrgica (bariátrica)
