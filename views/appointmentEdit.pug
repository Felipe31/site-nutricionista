                      input.form-control#bmi(type='text' placeholder='Ex.: 00' required)
                div.row
                  div.col-md-2
                    div.form-group
                      label Idade metabolica
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Gordura visceral
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Circunferência cervical
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
