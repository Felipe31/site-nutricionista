block layout-content
  div.View.content
    div.container-fluid
      div.row
        div.col-md-12
          div.card
            div.header
              h4.title Registrar Consulta
            div.content
              form
                div.row
                  div.col-md-8
                    div.form-group
                      label Paciente
                      input.form-control(type='text' placeholder='Nome')
                  div.col-md-4
                    div.form-group
                      label Plano de Sa&uacute;de
                      select#plans.form-control(name='plans')
                        option(value='') Selecione
                        //- each plan in plans
                        //-   option(value='#{plan.idPlano}') #{plan.nome}
                div.row
                  div.col-md-6
                    div.form-group
                      label Tipo de consulta [PARA QUE ESSE CAMPO?]
                      input.form-control(type='text' placeholder='Ex.: Retorno')
                  div.col-md-6
                    div.form-group
                      label Consult&oacute;rio
                      input.form-control(type='text' placeholder='Ex.: Sta. Casa')
                div.row
                  div.col-md-2
                    div.form-group
                      label Peso
                      input.form-control#weight(type='text' placeholder='Ex.: 00' onchange='calculateIMC()' required)
                  div.col-md-2
                    div.form-group
                      label Altura
                      input.form-control#height(type='text' placeholder='Ex.: 0.00' onchange='calculateIMC()' required)
                  div.col-md-2
                    div.form-group
                      label IMC
                      input.form-control#imc(type='text' tabindex="-1" readonly)
                  div.col-md-2
                    div.form-group
                      label Percentual de gordura
                      input.form-control#fatPercentage(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
