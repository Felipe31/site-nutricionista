                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Circunferência do quadril
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                div.row
                  div.col-md-2
                    div.form-group
                      label Relação cintura-quadril
                      input.form-control#imc(type='text' tabindex="-1" readonly)
                  div.col-md-3
                    div.form-group
                      label Resultado percentual de gordura
                      input.form-control#imc(type='text' tabindex="-1" readonly)
                  div.col-md-3
                    div.form-group
                      label Resultado percentual de músculo
                      input.form-control#imc(type='text' tabindex="-1" readonly)
                  div.col-md-2
                    div.form-group
                      label VET - Valor energético total
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label PTN - Proteína
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                div.row
                  div.col-md-3
                    div.form-group
                      label Necessidade hídrica (litros)
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
