                      label Atividade física
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-3
                    div.form-group
                      label Frequência da atividade física
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                div.row
                  div.col-md-2
                    div.form-group
                      label Tipo da atividade física
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Horário da atividade física
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Funcionamento do intestino
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Distensão abdominal
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                  div.col-md-2
                    div.form-group
                      label Escala de Bristol
                      input.form-control#weight(type='text' placeholder='Ex.: 00' required)
                div.row
                  div.col-md-12
                    h5 Demais informações
                div.row
                  div.col-md-1
                  div.col-md-2
                    div.form-group
                      div.checkbox(onClick='smoker()')
                          input#smoker(type='checkbox')
                          label#smoker-label(for='smoker') Nega tabagismo
                  div.col-md-2
                    div.form-group
                      div.checkbox
                          input(type='checkbox')
                          label(for='smoker') Fumante
                  div.col-md-2
                    div.form-group
                      div.checkbox
                          input(type='checkbox')
                          label(for='smoker') Fumante
                  div.col-md-2
                    div.form-group
                      div.checkbox
                          input(type='checkbox')
                          label(for='smoker') Fumante
                  div.col-md-2
                    div.form-group
                      div.checkbox
                          input(type='checkbox')
                          label(for='smoker') Fumante
                button.btn.btn-info.btn-fill.pull-right(type='submit') Registrar Consulta
                div.clearfix
                script.
                  function smoker() {
                    if (document.getElementById('smoker').checked)
                      document.getElementById('smoker-label').innerText = 'Tabagista';
                    else
                      document.getElementById('smoker-label').innerText = 'Nega tabagismo';
                  }
                  function calculateIMC() {
                    var weight = evaluateWeight(document.getElementById('weight').value);
                    var height = evaluateHeight(document.getElementById('height').value);
                    if(weight && height) {
                      document.getElementById('imc').value = "CALCULAR O IMC BASEADO NO PESO E ALTURA";
                    }
                  }
                  function evaluateWeight(weight) {
                    return (weight) ? weight : false;
                  }
                  function evaluateHeight(height) {
                    return (height) ? height : false;
                  }